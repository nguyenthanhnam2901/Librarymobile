<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="horizontal"
    android:id="@+id/cv_child_item"
    android:background="@color/background">

    <ImageView
        android:id="@+id/iv_child_item"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="0.4"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="2:3"
        android:minHeight="180dp"
        android:minWidth="130dp"
        android:maxHeight="200dp"
        android:maxWidth="150dp"
        android:scaleType="fitCenter"

        android:src="@drawable/book1"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/title_background"

            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="@color/text"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:text="@string/sample"
            />

        <TextView
            android:id="@+id/tv_child_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/text"

            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_child_title"

            android:text="@string/sample"
            />

        <TextView
            android:id="@+id/tv_child_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/text"

            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_child_author"

            android:text="@string/sample"
            />

        <TextView
            android:id="@+id/tv_child_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/text"

            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_child_description"

            android:text="@string/sample"
            />

    </RelativeLayout>

</LinearLayout>