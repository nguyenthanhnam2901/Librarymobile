<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LibraryBottomNav" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Dark mode  -->
    <!--  Screen background if dark mode on    -->
    <style name="BACKGROUND" >
        <item name="android:background">#000000</item>
    </style>
    <!--  Title background if dark mode on    -->
    <style name="TITLE" >
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!--  Text background if dark mode on    -->
    <style name="TEXT" >
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!--  Button background if dark mode on    -->
    <style name="BUTTON" >
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--  Tab background if dark mode on    -->
    <style name="TAB" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/black</item> <!-- Background color of each tab -->
        <item name="tabTextColor">@color/white</item> <!-- Default text color of tabs -->
        <item name="tabSelectedTextColor">@color/light_blue</item> <!-- Text color when a tab is selected -->
        <item name="tabIndicatorColor">@color/white</item> <!-- Color of the indicator below the selected tab -->
    </style>
